{% extends "CodersLabBundle::base.html.twig" %} 
{% block main %}
    <div class="input-group input-group-lg">
        <form action="/book/create" method="post">
            <label>Tytu≈Ç: 
                <input name="title">
            </label>
            <label>Description: 
                <input name="description">
            </label>
            <label>Rating: 
                <input name="rating">
            </label>
            <label>Author: 
                <select name="author_id">
                {% for author in authors %}
                    <option value="{{author.id}}" name="author_name">{{author.name}}</option>
                {% endfor %}
                </select>
            </label>
            <input type="submit">
        </form>
    </div>
{% endblock %}